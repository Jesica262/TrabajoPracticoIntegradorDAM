<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentInicioSesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/md_grey_400"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textListaArbol"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/inicio_card" />

        </LinearLayout>

        <TextView
            android:id="@+id/nombreText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="@string/Usuario"
            android:textSize="20sp"
            android:textColor="@color/md_grey_700"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nombreInicioSesion"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_700"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck"
            android:imeOptions="actionDone"/>

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:textColor="@color/md_grey_700"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/Password" />

        <EditText
            android:id="@+id/passwordInicioSesion"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_700"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck"
            android:imeOptions="actionDone"/>

        <Button
            android:id="@+id/aceptar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="85dp"
            android:backgroundTint="@color/md_green_700"
            android:text="@string/Aceptar"
            app:cornerRadius="30dp" />

    </LinearLayout>
</FrameLayout>