<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentInformacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/md_grey_400"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textListaArbol"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/inicio_card" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/informacionAdicional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/InformacionAdicional1"
                    android:textColor="@color/md_grey_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/informacionAdicional2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/InformacionAdicional2"
                    android:textColor="@color/md_grey_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/informacionAdicional3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/InformacionAdicional3"
                    android:textColor="@color/md_grey_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/aceptarInfo"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/md_green_700"
                    android:text="@string/Aceptar"
                    android:layout_margin="15dp"
                    android:textSize="20dp"
                    app:cornerRadius="30dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>