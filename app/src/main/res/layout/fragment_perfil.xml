<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/md_grey_400"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textListaArbol"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/card_view_6" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Nombre"
            android:textColor="@color/md_grey_800"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nombreEdit"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            android:textColor="@color/md_grey_800"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/id"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Identificación"
            android:textColor="@color/md_grey_800"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/identificadorPerfil"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            android:textColor="@color/md_grey_800"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="E-mail"
            android:textColor="@color/md_grey_800"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailTextPerfil"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            android:textColor="@color/md_grey_800"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tel"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Teléfono"
            android:textColor="@color/md_grey_800"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/telefonoPerfil"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            android:textColor="@color/md_grey_800"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/registrar"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:backgroundTint="@color/md_green_700"
            android:text="@string/Aceptar"
            app:cornerRadius="30dp" />

        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>